<% layout('/layouts/boilerplate') %>

<h1>My Campgrounds</h1>
<div id="map" style="width: 100%; height: 500px;"></div>
<% for(let camp of campgrounds) {%>
    <div class="card" mb-3 >
       <div class="row">
           <% if(camp.images.length >= 1) {%>
               <div class="col-md-4">
                   <img src="<%= camp.images[0].url %>" alt="" class="img-fluid">
               </div>
           <% } %>
           <div class="col-md-8">
               <div class="card-body">
                   <h5 class="card-tittle"><%= camp.Location %></h5>
                   <p class="card-text"><%= camp.Discription %></p>
                   <p class="card-text">
                       <small class="text-muted"><%= camp.Location %></small>
                   </p>
                   <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary"><%= camp.tittle %></a>
               </div>
           </div>
       </div>
    </div>   
<% } %>

<script>
    const maptoken = '<%- process.env.MAPBOX_TOKEN %>'
    const campgrounds = {features:<%- JSON.stringify(campgrounds)%>}
</script>
<script src="/javascripts/cluserMap.js"></script>
